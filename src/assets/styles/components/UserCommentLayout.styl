.userCommentLayout__container
  display flex
  align-items center
  justify-content flex-end
  margin 2px 10px 20px 10px
  .userCommentLayout__commentContainer
    display flex
    justify-content flex-start
    align-items center
    width 206px
    height fit-content
    margin-left 10px
    border-radius 12px
    background #c2c2c2
    overflow hidden
    .userCommentLayout__commentContainer--comment
      margin 10px
      line-height 2
      font-size mini-text-size
      font-weight 400

.userCommentLayout__commentLink
  position absolute
  align-self flex-end
  transform translateY(15px)
  font-size footer-text-size
  font-weight 400
  color Icon-blue