.postTextInput__container
  display flex
  flex-direction column
  align-items center
  justify-content center
  margin auto
  width 90%
  height 474px
  border 1px dashed Elegant-black
  border-radius 20px
  margin-top 20px
  .postTextInput__form
    width 100%
    height 440px
    padding 0 10px
    .postTextInput__form--input
      width 100%
      height 100%
      border none
      outline none
      font-family Main-font
      font-size text-size
      line-height 2
      color Elegant-black
  .postTextInput__characters
    align-self flex-end
    margin 5px 10px 0 0
    color Icon-blue
