.uploadPostPhoto__container
  display flex
  justify-content center
  align-items center
  min-width 375px
  height 155px
  .uploadPostPhoto__photo
    width 95%
    height 130px
    display flex
    justify-content center
    align-items center
    background #c2c2c2
    border-radius 20px

.uploadPostPhoto__form
  display flex
  width fit-content
  flex-direction column
  align-items center
  background White
  border-radius 6px
  .uploadPostPhoto__form--input
    width 0.1px
    height 0.1px
    opacity 0
    overflow hidden
    position absolute
    z-index -1
  .uploadPostPhoto__form--input + label
    display inline-block
    margin 5px
    background-color White
    font-size mini-text-size
    font-weight 500
    color #c2c2c2
